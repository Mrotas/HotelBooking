@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Zarządzaj Kontem", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style = "color:aliceblue!important" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" style="color:aliceblue!important">Wyloguj</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Zarejestruj", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", style = "color:aliceblue!important" })</li>
        <li>@Html.ActionLink("Zaloguj", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", style = "color:aliceblue!important" })</li>
    </ul>
}
